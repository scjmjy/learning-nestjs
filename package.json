{
    "name": "learning-nestjs",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "build:client": "vue-cli-service build --dest dist2/client",
        "build:server": "SSR=1 vue-cli-service build --dest dist2/server",
        "build:all": "yarn run build:client && yarn run build:server"
    },
    "dependencies": {
        "@adminjs/express": "^4.0.0",
        "@adminjs/nestjs": "^3.0.0",
        "@adminjs/typeorm": "^2.0.0",
        "@nestjs/axios": "^0.0.1",
        "@nestjs/bull": "^0.4.1",
        "@nestjs/common": "^8.0.6",
        "@nestjs/config": "^1.0.1",
        "@nestjs/core": "^8.0.6",
        "@nestjs/event-emitter": "^1.0.0",
        "@nestjs/mapped-types": "^1.0.0",
        "@nestjs/platform-express": "^8.0.6",
        "@nestjs/schedule": "^1.0.1",
        "@nestjs/typeorm": "^8.0.2",
        "@types/cron": "^1.7.3",
        "adminjs": "^5.1.1",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "bull": "^3.29.0",
        "cache-manager": "^3.4.4",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "connect-redis": "^6.0.0",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-formidable": "^1.2.0",
        "express-session": "^1.17.2",
        "hbs": "^4.1.2",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.0",
        "typeorm": "^0.2.37"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.1.1",
        "@nestjs/schematics": "^8.0.2",
        "@nestjs/testing": "^8.0.6",
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^3.15.4",
        "@types/cache-manager": "^3.4.2",
        "@types/connect-redis": "^0.0.17",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/express-session": "^1.17.4",
        "@types/jest": "^26.0.22",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.14.36",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^9.2.5",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3",
        "webpack": "^5.51.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "resolutions": {
        "@types/react": "16.14.10"
    }
}
